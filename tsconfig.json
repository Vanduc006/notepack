{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",         // <-- bắt buộc cho TSX
    "strict": true,
    "noUnusedLocals": true,     // báo lỗi biến khai báo mà không dùng
    "noUnusedParameters": true, // báo lỗi param không dùng
    "skipLibCheck": true,
  },
  // "include": ["src"]
}
